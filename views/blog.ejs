<!DOCTYPE html>
<html lang="en">

<head>
    <%- include('./partials/head') %>

        <title>Blog </title>

</head>

<body>
    <%- include('./partials/nav') %>

        <div class="container mt-4">
            <h1>
                <%= blog.title %>
            </h1>
            <img src="<%= blog.coverImageURL %>" width="400px" />
            <pre style="font-size: larger;"> <%= blog.body %>  </pre>
        </div>

        <div class="container mt-4">

            <h5>blog created by:</h5>
            <%= blog.createdBy.fullName %>

        </div>

        <div class="container mt-3">
            <h3>Comments  (<%= comments.length %>)</h3>

           
            <% if (locals.user) { %>
                <form action="/blog/comment/<%= blog._id %>" method="post">
                    <div class="mb-3">
                        <input type="text" name="content" class="form-control" placeholder="Comment something..."
                            required>
                    </div>
                    <button type="submit" class="btn btn-sm btn-primary">Add</button>
                </form>
                <% } %>

                    
                   
        </div>

        <div class="mt-3">
            <% comments.forEach(comment=> { %>
                <div class="mb-2 p-2 border rounded bg-light">
                    <strong>
                        <%= comment.createdBy ? comment.createdBy.fullName : "Unknown" %>:
                    </strong>
                    <pre class="m-0"><%= comment.content %></pre>
                </div>
                <% }) %>
        </div>




        <%- include('./partials/scripts') %>
</body>

</html>